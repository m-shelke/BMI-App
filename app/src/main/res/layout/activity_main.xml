<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".MainActivity">

        <RelativeLayout
            android:id="@+id/centreHorizontalline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"/>

        <RelativeLayout
            android:id="@+id/centreVerticalline"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"/>



    <RelativeLayout
        android:id="@+id/male"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_toStartOf="@id/centreVerticalline"
        android:background="@drawable/heightcard_bg"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="60dp"
        android:layout_above="@id/heightLayout"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="170px"
            android:layout_height="170px"
            android:layout_marginBottom="10dp"
            android:layout_above="@id/txtMale"
            android:src="@drawable/male"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/txtMale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Male"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"/>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/female"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:layout_toEndOf="@id/centreVerticalline"
        android:background="@drawable/heightcard_bg"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="60dp"
        android:layout_above="@id/heightLayout"
        android:layout_marginTop="20dp">

        <ImageView
            android:layout_width="170px"
            android:layout_height="170px"
            android:layout_marginBottom="10dp"
            android:layout_above="@id/txtFemale"
            android:src="@drawable/female"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/txtFemale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Female"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:textAlignment="center"
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>



    <RelativeLayout
            android:id="@+id/heightLayout"
            android:layout_width="340dp"
            android:layout_height="150dp"
            android:layout_above="@id/centreHorizontalline"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="0dp"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:background="@drawable/heightcard_bg">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Height"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_marginTop="15dp"/>

            <TextView
                android:id="@+id/currentHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="40sp"
                android:layout_marginBottom="50dp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cm"
                android:textSize="20sp"
                android:textStyle="italic"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:layout_toEndOf="@id/currentHeight"
                android:layout_marginStart="20dp"/>


        <SeekBar
            android:id="@+id/seekbarForHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="27dp"
            android:padding="8dp"
            android:thumbTint="@color/white"
            android:progressTint="@color/white" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/weight"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_toStartOf="@id/centreVerticalline"
        android:layout_below="@id/heightLayout"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/heightcard_bg">

        <TextView
            android:id="@+id/textWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Weight"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/currentWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="30"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textAlignment="center"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:padding="3dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/decreamentWeight"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/minus"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:padding="3dp"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/increamentWeight"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/plus" />

        </RelativeLayout>



    </RelativeLayout>





    <RelativeLayout
        android:id="@+id/age"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_toEndOf="@id/centreVerticalline"
        android:layout_below="@id/heightLayout"
        android:layout_marginTop="85dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/heightcard_bg">

        <TextView
            android:id="@+id/textAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Age"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="15dp"/>

        <TextView
            android:id="@+id/currentAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="25"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            android:layout_centerInParent="true"
            android:textAlignment="center"/>


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="20dp"
            android:padding="3dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/decreamentAge"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/minus"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="10dp"
            android:padding="3dp"
            android:layout_alignParentEnd="true">

            <ImageView
                android:id="@+id/increamentAge"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/plus" />

        </RelativeLayout>



    </RelativeLayout>

    <Button
            android:id="@+id/calculateBMIBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            style="@style/MyButtonStyle"
        android:background="@drawable/button_bg"/>

    </RelativeLayout>
